---
import type { PickProduct } from '../../data/picks';
import { categoryLabels } from '../../data/picks';

interface Props {
  product: PickProduct;
}

const { product } = Astro.props;
const categoryLabel = categoryLabels[product.category];
---

<a
  class="block group"
  href={`/picks/${product.slug}/`}
  data-pick-card
  data-category={product.category}
  data-featured={product.featured ? 'true' : 'false'}
>
  <article class="product-card cursor-pointer">
    <div class="product-card-img-container relative">
      {product.featured && (
        <span class="absolute top-3 left-3 text-[10px] font-medium text-gray-500 bg-white/90 px-2 py-0.5 rounded-full border border-gray-200/80">
          Destacado
        </span>
      )}
      <span class="absolute top-3 right-3 p-1.5 bg-white/90 rounded-full border border-gray-200/80 opacity-0 group-hover:opacity-100 transition-opacity duration-200" aria-hidden="true">
        <svg class="w-3.5 h-3.5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M7 17L17 7M17 7H7M17 7v10" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path></svg>
      </span>
      <img alt={product.title} class="product-img" src={product.image} loading="lazy" />
    </div>
    <div class="flex justify-between items-end gap-4 px-4 py-3.5">
      <div>
        <p class="text-[11px] text-gray-400 mb-0.5">{product.brand} Â· {categoryLabel}</p>
        <h3 class="text-sm font-medium text-gray-900 leading-snug">{product.title}</h3>
      </div>
      <span class="text-sm text-gray-900 whitespace-nowrap shrink-0">{product.priceLabel}</span>
    </div>
  </article>
</a>
